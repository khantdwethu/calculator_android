<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numberOne"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Number One"

        android:padding="20dp"
        android:textColorHint="@color/main"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/numberTwo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:hint="Number Two"
        android:padding="20dp"

        android:textColorHint="@color/main"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numberOne" />


    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Result :"
        android:textColor="@color/main"

        android:textSize="30dp"

        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"


        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberTwo" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/main"
        android:textSize="30dp"


        app:layout_constraintBottom_toBottomOf="@id/resultText"
        app:layout_constraintLeft_toRightOf="@id/resultText"
        app:layout_constraintTop_toTopOf="@id/resultText"

        />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:padding="15dp"

        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"

        android:backgroundTint="@color/main"

        app:layout_constraintTop_toBottomOf="@id/resultText"
        app:layout_constraintLeft_toLeftOf="parent"



        />

    <Button
        android:id="@+id/subBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Substract"
        android:padding="15dp"

        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"

        android:backgroundTint="@color/main"

        app:layout_constraintTop_toBottomOf="@id/resultText"
        app:layout_constraintRight_toRightOf="parent"



        />

    <Button
        android:id="@+id/mulBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Multiply"
        android:padding="15dp"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:backgroundTint="@color/main"

        app:layout_constraintTop_toBottomOf="@id/addBtn"
        app:layout_constraintLeft_toLeftOf="parent"



        />

    <Button
        android:id="@+id/divBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Divide"
        android:padding="15dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"

        android:backgroundTint="@color/main"

        app:layout_constraintTop_toBottomOf="@id/subBtn"
        app:layout_constraintRight_toRightOf="parent"



        />

</androidx.constraintlayout.widget.ConstraintLayout>